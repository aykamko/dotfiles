  rbenv() { unset -f rbenv && eval "$(rbenv init -)" && rbenv "$@"; }
fi

if (( $+commands[nodenv] )); then
  nodenv() { unset -f nodenv && eval "$(nodenv init -)" && nodenv "$@"; }
fi

if (( $+commands[pyenv] )); then
  pyenv() {
    unset -f pyenv && \
      eval "$(pyenv init - | tail -n +2)" && \
      eval "$(pyenv virtualenv-init -)" && \
      pyenv "$@"
  }
fi

