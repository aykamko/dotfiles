# override cd to do ls and vim when necessary
better_cd() {
  set -- ${1//,/.} # replace commas , with periods . (looking at u Golang)
  if [[ -f $1 ]]; then
    local fdir=$(dirname $1)
    [[ -d $fdir ]] && builtin cd $fdir && ls && vim $(basename $1) ${*:2}
  else
    builtin cd "$@" && ls
  fi
}
alias cd=better_cd

